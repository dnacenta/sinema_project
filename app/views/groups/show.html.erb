<h2 id="group-list"><%=@group.name%></h2>

<button class="btn btn-default" type="button">
  <%= link_to add_user_path(@user, @group), method: :get do %>
    Add User
  <% end %>
</button>

<button class="btn btn-default" type="button">
  <%= link_to user_group_choices_path(@user, @group), method: :get do %>
    Your Choices
  <% end %>
</button>

<button class="btn btn-default" type="button">
  <%= link_to exit_group_path(@user, @group), data: {confirm: 'Are you sure you want to exit this group?'} ,method: :get do %>
    Exit Group
  <% end %>
</button>

<ul class="film-container" data-user="<%= @user.id %>" data-group="<%= @group.id %>"></ul>

<div class="modal fade" id=users-modal>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
        <h3 class="modal-title">
          <span>List of users</span>
        </h3>
      </div>
      <div class="modal-body">
        <% @group.users.each do |user| %>
        <p><%=user.name%></p>
        <%end%>
      </div>
    </div>
  </div>
</div>
