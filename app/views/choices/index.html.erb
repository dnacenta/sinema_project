<h2>Your Choices:</h2>

<button class ="btn btn-default back" type="button">
  <%= link_to user_group_path(@user, @group), method: :get do %>
    <%= @group.name %>
  <% end %>
</button>

<% @choices.each do |choice| %>
  <div class="row"><br>
    <div class="col-md-4">
      <img class="film-choice" src="<%= choice.poster_url %>">
    </div>
    <div class="col-md-4">
      <p class="film-user"><%= choice.user.name %></p><br>
    </div>
    <div class="col-md-4">
        <div class="progress progress-striped active">
          <div class="progress-bar" style="width: 100%"></div>
        </div>
    </div>
  </div>
<% end %>
