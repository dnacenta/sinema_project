<h2>Your Choices:</h2>

<button class ="btn btn-default back" type="button">
  <%= link_to user_group_path(@user, @group), method: :get do %>
    <%= @group.name %>
  <% end %>
</button>

<% @choices.each do |choice| %>
  <div class="row"><br>
    <div class="col-md-4">
      <img class="film-choice" src="<%= choice.poster_url %>">
    </div>
    <div class="col-md-8">
      <h4 class="film-user"><%= choice.user.name %></h4><br>
      <h4 class="film-user"><%= choice.user.email %></h4><br>
      <h4 class="film-user"><%= choice.created_at.strftime("%I:%M %p %b %d")%></h4><br>
    </div>
  </div>
<% end %>
